        function showCountryInfo(countryId) {
            const country = countryData[countryId];
            if (!country) {
                alert('Country data not available yet. More countries coming soon!');
                return;
            }

            // Populate header
            document.getElementById('countryFlag').textContent = country.flag;
            document.getElementById('countryName').textContent = country.name;
            document.getElementById('countrySubtitle').textContent = country.continent;

            // Populate stats
            const statsGrid = document.getElementById('statsGrid');
            statsGrid.innerHTML = `
                <div class="stat-item">
                    <div class="stat-value">${country.population}</div>
                    <div class="stat-label">Population</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${country.christianPercent}%</div>
                    <div class="stat-label">Christian</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${country.evangelicalPercent}%</div>
                    <div class="stat-label">Evangelical</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${country.lifeExpectancy}</div>
                    <div class="stat-label">Life Expectancy</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${country.majorReligion}</div>
                    <div class="stat-label">Major Religion</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">${country.literacy}</div>
                    <div class="stat-label">Literacy Rate</div>
                </div>
            `;

            // Populate prayer focus
            document.getElementById('prayerNeeds').textContent = country.prayerFocus;

            // Populate challenges
            const challengesList = document.getElementById('challengesList');
            challengesList.innerHTML = country.challenges.map(challenge => 
                `<li style="margin-bottom: 0.5rem;">${challenge}</li>`
            ).join('');

            // Populate opportunities
            const opportunitiesList = document.getElementById('opportunitiesList');
            opportunitiesList.innerHTML = country.opportunities.map(opportunity => 
                `<li style="margin-bottom: 0.5rem;">${opportunity}</li>`
            ).join('');

            // Show modal
            document.getElementById('overlay').classList.add('show');
            document.getElementById('countryInfo').classList.add('show');
        }

        function closeCountryInfo() {
            document.getElementById('overlay').classList.remove('show');
            document.getElementById('countryInfo').classList.remove('show');
        }

        // Add more countries gradually
        const additionalCountries = ['canada', 'mexico', 'germany', 'spain', 'italy', 'poland', 'ukraine', 'russia', 'south_africa', 'ethiopia', 'egypt', 'morocco', 'algeria', 'sudan', 'indonesia', 'japan', 'thailand', 'south_korea', 'saudi_arabia', 'iran', 'turkey', 'new_zealand', 'argentina', 'colombia', 'peru'];

        // Initialize tooltips for countries without full data
        additionalCountries.forEach(countryId => {
            const countryElement = document.getElementById(countryId);
            if (countryElement && !countryData[countryId]) {
                countryElement.style.opacity = '0.7';
                countryElement.setAttribute('title', 'Click for more information (data coming soon)');
            }
        });

        // Keyboard support
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeCountryInfo();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Interactive World Map loaded with', Object.keys(countryData).length, 'countries');
        });
    </script>
</body>
</html>
